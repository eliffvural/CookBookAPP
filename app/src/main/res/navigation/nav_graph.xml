<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.cookbookapp.view.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.example.cookbookapp.view.RecipeFragment"
        android:label="fragment_recipe"
        tools:layout="@layout/fragment_recipe" >
        <argument
            android:name="information"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="integer" />

        <!-- Buraya action ekleyerek RecipeFragment'tan ListFragment'a geçişi tanımla -->
        <action
            android:id="@+id/action_recipeFragmentTolistFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>
